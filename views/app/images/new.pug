extends ../../layout.pug
block contenido
    div(class="col-md-5 remove-float mx-auto center-block big-top-space")
        h1 Subir una imagen
        form(action="/app/images" method="POST")
            div(class="form-group")
                label(for="title") Título
                input(type="text", name="title", placeholder="Título de la imagen...", id="title", class="form-control")
            div(class="form-group")
                label(for="archivo") Imagen
                input(type="file", name="archivo",  id="archivo", class="form-control")
            div(class="row")
                div(class="col-sm-6")
                    input(type="submit", value="Guardar" class="btn btn-success")