extends ./layout.pug
block contenido
    div(class="col-md-5 remove-float mx-auto center-block big-top-space")
        form(action="/users" method="POST")
            div(class="form-group")
                label(for="email") Email
                input(type="text", name="email", placeholder="Email", id="email", class="form-control")
            div(class="form-group")
                label(for="password") Password
                input(type="password", name="password", placeholder="Password", id="password", class="form-control")
            div(class="form-group")
                label(for="password") Confirm Password
                input(type="password", name="password_confirmation", placeholder="Confirm password", id="password", class="form-control")
            div(class="form-group")
                label(for="username") User Name
                input(type="username", name="username", placeholder="username", id="username", class="form-control")
            div(class="row form-group")
                div(class="col-sm-6")
                    input(type="submit" , value="Crear cuenta" class="btn btn-info")
                div(class="col-sm-6 text-right")
                    a(href="/login") Ya tengo una cuenta